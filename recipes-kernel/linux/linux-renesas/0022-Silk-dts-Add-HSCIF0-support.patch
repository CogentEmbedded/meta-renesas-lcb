From 525f184b6d73c2c46e32ccb69fece55348c7d811 Mon Sep 17 00:00:00 2001
From: Mikhail Ulyanov <mikhail.ulyanov@cogentembedded.com>
Date: Wed, 11 Feb 2015 16:16:35 +0300
Subject: [PATCH] ARM: shmobile: silk: dts: Add HSCIF0 support

This adds HSCIF0 support to SILK DTS.

Signed-off-by: Mikhail Ulyanov <mikhail.ulyanov@cogentembedded.com>
Signed-off-by: Valentine Barshak <valentine.barshak@cogentembedded.com>
---
 arch/arm/boot/dts/r8a7794-silk.dts | 13 +++++++++++++
 1 file changed, 13 insertions(+)

diff --git a/arch/arm/boot/dts/r8a7794-silk.dts b/arch/arm/boot/dts/r8a7794-silk.dts
index 4522837..2375e12 100644
--- a/arch/arm/boot/dts/r8a7794-silk.dts
+++ b/arch/arm/boot/dts/r8a7794-silk.dts
@@ -33,6 +33,7 @@
 
 	aliases {
 		serial10 = &scif2;
+		serial8 = &hscif0;
 	};
 
 	chosen {
@@ -244,6 +245,11 @@
 		renesas,function = "scif2";
 	};
 
+	hscif0_pins: serial8 {
+		renesas,groups = "hscif0_data", "hscif0_ctrl";
+		renesas,function = "hscif0";
+	};
+
 	ether_pins: ether {
 		renesas,groups = "eth_link", "eth_mdio", "eth_rmii";
 		renesas,function = "eth";
@@ -323,6 +329,13 @@
 	status = "okay";
 };
 
+&hscif0 {
+	pinctrl-0 = <&hscif0_pins>;
+	pinctrl-names = "default";
+
+	status = "okay";
+};
+
 &qspi {
 	pinctrl-0 = <&qspi_pins>;
 	pinctrl-names = "default";
-- 
